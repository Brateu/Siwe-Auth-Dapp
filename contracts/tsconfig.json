{
  "compilerOptions": {
  "target": "es2020",
  "module": "commonjs",
  "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@contracts/*": ["./typechain-types/*"]
    },
  "isolatedModules": false,
  "allowJs": false,
    
    "types": [
      "node",
      "hardhat",
      "mocha",
      "@nomicfoundation/hardhat-ethers",
      "@nomicfoundation/hardhat-chai-matchers"
    ]
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./typechain-types/**/*",
    "./hardhat.config.ts"
  ],
  "files": ["./hardhat.config.ts"]
}